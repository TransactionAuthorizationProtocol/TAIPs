{
  "name": "@taprsvp/types",
  "version": "1.13.0",
  "description": "TypeScript types and interfaces for the Transaction Authorization Protocol (TAP)",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "require": "./dist/index.js",
      "types": "./dist/index.d.ts"
    },
    "./validator": {
      "import": "./dist/validator.js",
      "require": "./dist/validator.js",
      "types": "./dist/validator.d.ts"
    }
  },
  "scripts": {
    "build": "tsc",
    "clean": "rimraf dist",
    "type-check": "tsc --noEmit",
    "test": "vitest",
    "test:run": "vitest run",
    "prepublishOnly": "npm run build"
  },
  "files": [
    "dist",
    "src"
  ],
  "keywords": [
    "tap",
    "typescript",
    "types",
    "did",
    "didcomm",
    "blockchain",
    "transaction"
  ],
  "author": "Pelle Braendgaard <pelleb@gmail.com",
  "license": "MIT",
  "devDependencies": {
    "rimraf": "^6.0.0",
    "typescript": "^5.9.0",
    "vitest": "^3.2.4",
    "fast-check": "^4.3.0"
  },
  "publishConfig": {
    "access": "public"
  },
  "dependencies": {
    "ivms101": "^1.2.1",
    "zod": "^4.0.17"
  }
}
