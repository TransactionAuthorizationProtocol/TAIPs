{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://taips.tap.rsvp/schemas/messages/reject.json",
  "title": "Reject Message",
  "description": "Rejects a TAP transaction or request per TAIP-4",
  "type": "object",
  "allOf": [
    {
      "$ref": "../common/didcomm-base.json#/$defs/didcommHeader"
    }
  ],
  "properties": {
    "type": {
      "const": "https://tap.rsvp/schema/1.0#Reject"
    },
    "body": {
      "type": "object",
      "required": ["@context", "@type"],
      "properties": {
        "@context": {
          "const": "https://tap.rsvp/schema/1.0"
        },
        "@type": {
          "const": "https://tap.rsvp/schema/1.0#Reject"
        },
        "reason": {
          "type": "string",
          "description": "Optional human-readable reason for rejection"
        }
      },
      "additionalProperties": false
    }
  },
  "required": ["type", "body"]
}