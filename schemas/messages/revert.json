{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://taips.tap.rsvp/schemas/messages/revert.json",
  "title": "Revert Message",
  "description": "Request reversal of a transaction per TAIP-4",
  "type": "object",
  "allOf": [
    {
      "$ref": "../common/didcomm-base.json#/$defs/didcommHeader"
    }
  ],
  "properties": {
    "type": {
      "const": "https://tap.rsvp/schema/1.0#Revert"
    },
    "body": {
      "type": "object",
      "required": ["@context", "@type", "settlementAddress", "reason"],
      "properties": {
        "@context": {
          "const": "https://tap.rsvp/schema/1.0"
        },
        "@type": {
          "const": "https://tap.rsvp/schema/1.0#Revert"
        },
        "settlementAddress": {
          "$ref": "../common/settlement-address.json",
          "description": "Settlement address to return funds to in either CAIP-10 or RFC 8905 format"
        },
        "reason": {
          "type": "string",
          "description": "Human readable message describing why the transaction reversal is being requested"
        }
      },
      "additionalProperties": false
    }
  },
  "required": ["type", "body"]
}